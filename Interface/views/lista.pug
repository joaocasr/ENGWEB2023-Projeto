extends layout

block content
	.w3-top
		.w3-bar.w3-black.w3-card(style="height:100%;")
			p.w3-bar-item.w3-padding-large(style="font-size:16px;") BRAGA STREET VIEW
			p
				a.w3-bar-item.w3-button.w3-padding-large(href="/ruas" ) HOME
			p
				a.w3-bar-item.w3-button.w3-padding-large(href="/login") LOGIN
			p(style="display:flex;justify-content:flex-end;margin-right:30px;") 
				a.w3-bar-item.w3-padding-large Bem-vindo, #{user.name}! 
				img(style="border-radius: 50%;width:45px;height:45px;margin-left:10px;", src="/images/imagensdeperfil/"+user.myphoto)
				a.w3-bar-item.w3-button.w3-padding-large(href="/logout") LOGOUT

	header.w3-display-container.w3-content.w3-wide(style="max-width:1540px;",id="home")
		img.w3-image(src="/images/bom_jesus.jpg",alt="Bom Jesus",width="1540px",height="800px")
		.w3-display-middle.w3-margin-top.w3-center(style="bottom: 800px;")
			h1.w3-xxlarge.w3-text-white
				span.w3-padding.w3-black.w3-opacity-min Mapa Virtual de Braga

	.w3-content.w3-padding(style="max-width:1564px")
		.w3-container.w3-padding-32(id="ruas")
			h3.w3-border-bottom.w3-border-light-grey.w3-padding-16(style="font-weight: 600 !important;") Ruas de Braga
			p O portal Braga Street View será o guia que o irá acompanhar na descoberta da história e dos lugares mais emblemáticos da cidade de Braga. Nele poderá explorar um conjunto alargados de ruas Bracarenses e consultar informações detalhadas sobre vários locais da cidade que será considerada a Capital Portuguesa da Cultura em 2025. Aproveite para conhecer a história rica desta cidade e apreciar a sua beleza arquitetônica através desta experiência única.
		if(user.role=="admin")
			fieldset(style="margin-bottom:30px; padding:10px; margin-left:16px; margin-right:16px;") Gestão de Ruas:
				.w3-button.w3-black(style="margin-left:10px;")
					a(href="/add") Adicionar rua +
		- var n = 0
		- var rowpad = Math.ceil(streets.length / 4)
		//- for(let j=0 ; j< rowpad;j++ )
		.w3-row-padding
			- for (let r = n; r < n + 4 && r < streets.length; r++)
				- if (streets[r])
					.w3-col.l3.m6.w3-margin-bottom
						.w3-display-container
							.w3-display-topleft.w3-black.w3-padding.w3-round.w3-border 
								a(href="/ruas/" + streets[r]._id) #{streets[r].nome}
							- if (streets[r].figurasAtuais.length > 0)
								img.w3-round(src="/images/dados/materialBase/atual/" + streets[r].figurasAtuais[0].nome, alt="House", style="width:100%;height:400px;object-fit:cover;")
							- else
								img.w3-round(src="/path/to/placeholder/image.jpg", alt="House", style="width:100%;height:400px;object-fit:cover;")
							- n = n + 1
	
	br
	footer.w3-center.w3-black.w3-padding-16.w3-container(style="margin-top: auto; width:100%;")
		a(href="/creditos") Créditos
		p ©2023 All Rights Reserved
