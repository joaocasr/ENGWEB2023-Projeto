extends layout

block content
	.w3-top
		.w3-bar.w3-black.w3-card(style="height:100%;")
			p.w3-bar-item.w3-padding-large(style="font-size:16px;") BRAGA STREET VIEW
			p
				a.w3-bar-item.w3-button.w3-padding-large(href="/ruas" ) HOME
			p
				a.w3-bar-item.w3-button.w3-padding-large(href="/") LOGIN
				
	
	header#home.w3-display-container.w3-content(style="max-width:2040px;")
			img.w3-image(src="/images/bom_jesus.jpg", alt="Bom Jesus", width="2040px", height="800px")
			.w3-display-middle.w3-container.m7.l8(style="display: flex;justify-content: center;margin-top:-50px;")
				.w3-card-4(style="height: 550px; background-color: white;")
					.w3-display-container.w3-center
						.row.align-items-center.justify-content-center(style="padding:30px;")
							.text-center.mb-5
								h3.text-uppercase
									u LOGIN
									// tem que estar assim para ficar mais bonito lol
									br
									| Braga Street View 
								form(style="margin-top: 40px;" action="/" method="POST")
									label(style="margin-right: 91%;") Username
									input.w3-input.w3-panel.w3-round.w3-light-grey(style="height:40px", type="text", placeholder="your-username", name="username")
									label(style="margin-right: 91%") Password
									input.w3-input.w3-panel.w3-round.w3-light-grey(style="height:40px", type="password", placeholder="your-password", name="password")
									if(message)
										p(style="color:red;") #{message}
									button.w3-round.w3-brown(type="submit", style="height:50px;width: 400px;margin-top: 40px;") Login
									p Não tem uma conta? 
										a(href="/register", style="color: #4272d7; font-weight: bold !important;") Sign Up

	footer.w3-center.w3-black.w3-padding-16.w3-container(style="margin-top: auto; width:100%;")
		a(href="/creditos") Créditos
		p ©2023 All Rights Reserved

